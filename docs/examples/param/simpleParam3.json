{
  "params": [
    {
      "name": "a",
      "value": 3,
      "min": 0,
      "max": 10
    },
    {
      "name": "b",
      "value": 0.5,
      "min": 0,
      "max": 1,
      "round": 0.1
    }
  ],
  "layout": {
    "type": "HTMLPlusSidebarLayout",
    "def": {
      "html": "`<p>The value of $a$ is ${params.a}.</p><p>The value of $b$ is ${params.b.toFixed(1)}.</p><p>Let's add $a$ and $b$ together: $$ ${params.a} + ${params.b.toFixed(1)} = ${(params.a + params.b).toFixed(1)}$$</p>`",
      "sidebar": {
        "controls": [
          {
            "title": "Parameters",
            "sliders": [
              {
                "param": "a",
                "label": "a"
              },
              {
                "param": "b",
                "label": "b"
              }
            ]
          }
        ]
      }
    }
  }
}